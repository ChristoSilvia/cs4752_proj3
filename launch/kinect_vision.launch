<launch>
    <param name="num_blocks" value="2" type="int"/>
    <param name="limb" value="right" />
    <param name="ball_start" value="right" />

    <arg name="rviz" default="false"/>
    <arg name="calibrate" default="false"/>

    <node ns="kinect" name="zic_kinect_vision" pkg="cs4752_proj3" type="vision.py"></node>
    <node name="kalman" pkg="cs4752_proj3" type="kalman.py" output="screen"></node>

 
    <!-- <node if="$(arg rviz)" pkg="rviz" type="rviz" name="rviz" args="-d $(find cs4752_proj3)/config/plane_frame.rviz"/> -->

    <node unless="$(arg calibrate)" pkg="tf" type="static_transform_publisher" name="kinect_tf" args="0.03 0.42 1.4 0.684086283844 -0.728707328089 0.017858845998 0.0263182040758 camera_rgb_optical_frame base 100"/>
</launch>